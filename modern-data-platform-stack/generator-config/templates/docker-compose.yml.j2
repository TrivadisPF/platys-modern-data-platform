{% if (KAFKA_enable and not KAFKA_use_kraft_mode and ns.secureKafkaEnabled and (KAFKA_sasl_mechanism == 'SCRAM-SHA-256' or KAFKA_sasl_mechanism == 'SCRAM-SHA-512')) | default(false) %}
  #  ================================== Kafka Sec(urity) Init ========================================== #
  kafka-sec-init:
