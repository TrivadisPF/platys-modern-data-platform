      {% endif %}  {#  AIRFLOW_remote_logging_enabled #}      
    {% endif %}
    {% if AIRFLOW_variables is defined and AIRFLOW_variables and AIRFLOW_variables | length | default(false) %}
      {% for variable in AIRFLOW_variables.split(',') %}
