      AIRFLOW_CONN_LOG_S3_CONN: > 
        { "conn_type": "aws", 
          "host": "minio-1", 
          "login": "{{s3AccessKey | mandatory('s3AccessKey must be defined, if using minIO use the MINIO_access_key in config.yml') }}", 
          "password": "{{s3SecretAccessKey}}", 
          "schema": "", 
          "port": 9000, 
          "extra": {"endpoint_url": "{{s3Endpoint}}", "region_name": "us-east-1"}
        }
      AWS_ACCESS_KEY_ID: {{s3AccessKey | mandatory('s3AccessKey must be defined, if using minIO use the MINIO_access_key in config.yml') }}
